@model List<Login>
@{
    ViewBag.Title = "User Master List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">@ViewBag.Title</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    User Master Details
                </div>

                <br>

                <a href="@(string.Format("{0}?id={1}", Url.Action("AddEdit", "UserMaster", new { area = "" }), default(long).ToString()))" class="button-save btn btn-success" style="text-decoration: none;">Add New User</a> &nbsp;
                

                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    @*<th><input type="checkbox" name="checkedAll" id="checkedAll" /></th>
                                    <th>Status</th>*@
                                    <th>Action</th>
                                    <th>User Name</th>
                                    <th>Full Name</th>
                                    <th>User Role</th>
                                </tr>
                            </thead>
                            <tbody id="table_body">
                                @if(Model!=null && Model.Count()>0)
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            @*<td></td>
                                            <td></td>*@
                                            <td></td>
                                            <td>@item.UserName</td>
                                            <td>@item.FullName</td>
                                            <td>
                                                @(item.UserRole==1?"Admin":"User")
                                            </td>
                                        </tr>
                                    }
                                    
                                }
                            </tbody>
                        </table>
                    </div>

                </div>

            </div>

        </div>
    </div>
</div>
    </div>



